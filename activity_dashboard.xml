<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background"
    android:padding="20dp">

    <!-- Top Logo and App Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="25dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/app_logo"
            android:contentDescription="App Logo"
            android:layout_marginEnd="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quiz App"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- Welcome Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Quiz App"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:shadowColor="#55000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4" />

    <!-- Attempt AI Quiz -->
    <Button
        android:id="@+id/btnAIQuiz"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Attempt AI Quiz"
        android:backgroundTint="@color/primary"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <!-- Attempt Manual Quiz -->
    <Button
        android:id="@+id/btnManualQuiz"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Attempt Manual Quiz"
        android:backgroundTint="@color/primary"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <!-- View Result -->
    <Button
        android:id="@+id/btnViewResult"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="View Result"
        android:backgroundTint="@color/primary"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginBottom="40dp" />

    <!-- Home Button -->
    <ImageButton
        android:id="@+id/btnHome"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"
        android:src="@android:drawable/ic_menu_revert"
        android:contentDescription="Home" />

    <!-- Footer -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developed by Nayyab Sajid"
        android:textColor="#222222"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
